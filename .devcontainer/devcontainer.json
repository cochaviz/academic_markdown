{
  "name": "Academic Markdown",
  "image": "docker.io/zoharcochavi/academic-markdown", // for quick building
  // "build": { "dockerfile": "Dockerfile" },           // for building

  "customizations": {
    "vscode": {
      "extensions": [
        "yzhang.markdown-all-in-one",
        "DavidAnson.vscode-markdownlint",
        "goessner.mdmath",
        "notZaki.pandocciter",
        "streetsidesoftware.code-spell-checker",
        "znck.grammarly",
        "stkb.rewrap",
        "ms-vscode.wordcount",
        "bierner.github-markdown-preview",
        "tomoki1207.vscode-pdf",
        "James-Yu.latex-workshop",
        "esbenp.prettier-vscode"
      ]
    }
  },

  "remoteEnv": {
    "useTectonic": "--tectonic"
  },
  "remoteUser": "markdown-warrior",

  "postCreateCommand": "pip3 install --no-cache-dir academic_markdown"
}
