{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build document",
      "type": "shell",
      "command": "academic_markdown build $useTectonic ${relativeFile} ${input:target}",
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "echo": false,
        "reveal": "silent",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": true
      }
    },
    {
      "label": "Build folder",
      "type": "shell",
      "command": "academic_markdown build $useTectonic ${relativeFileDirname} ${input:target}",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": false,
        "reveal": "silent",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": true
      }
    },
    {
      "label": "Build document (Docker)",
      "type": "shell",
      // "dependsOn": ["Docker Build"],
      "command": "academic_markdown build --docker ${relativeFile} ${input:target}",
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "echo": false,
        "reveal": "silent",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": true
      }
    },
    {
      "label": "Build folder (Docker)",
      "type": "shell",
      // "dependsOn": ["Docker Build"],
      "command": "academic_markdown build --docker ${relativeFileDirname} ${input:target}",
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "echo": false,
        "reveal": "silent",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": true
      }
    },
    {
      "label": "Chech health (Local)",
      "type": "shell",
      "command": "academic_markdown check-health",
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "echo": false,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": true
      }
    },
    {
      "label": "Chech health (Docker)",
      "type": "shell",
      "command": "academic_markdown check-health --docker",
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "echo": false,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": true
      }
    },
    {
      "label": "Update template",
      "type": "shell",
      "command": "git stash && git remote add template git@github.com:cochaviz/academic_markdown.git || exit 1; git pull template main --allow-unrelated-histories && git add .devcontainer .vscode; git stash pop",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": true
      }
    }
  ],
  "inputs": [
    {
      "id": "target",
      "description": "Indicate the export file type",
      "options": ["pdf", "html", "tex", "md"],
      "default": "pdf",
      "type": "pickString"
    }
  ]
}
